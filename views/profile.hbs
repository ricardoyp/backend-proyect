<h1>Profile page</h1>
<div>
    {{#if user}}
    {{#if user.photo}}
    <img src={{user.photo}} alt="user-image" style="width: 50px; border-radius: 50px">
    {{/if}}
    <p>username: {{user.username}}</p>
    <p>email: {{user.email}}</p>
    {{/if}}
    <a href="/auth/logout">LogOut</a>
    <a href="/user/update">Update profile</a>
</div>

{{#if user.posts}}
    <h2>Publicaciones del usuario</h2>
    {{#each user.posts as |post|}}
        <div>
            <p>Nombre de usuario: {{post.user.username}}</p>
            <p>Ubicaci√≥n: {{post.location.name}}</p>
            <img src="{{post.photo}}" alt="imagen-de-publicacion" style="width: 50px; border-radius: 50px">
        </div>
    {{/each}}
{{else}}
    <p>No hay publicaciones disponibles para este usuario.</p>
{{/if}}